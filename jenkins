pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
        bat """
        if exist out rmdir /s /q out
        mkdir out
        javac -d out src\\hello\\*.java
        """
      }
    }
    stage('Run') {
      steps {
        bat """
        java -cp out hello.GoodBye
        echo Build_OK > artifact.txt
        """
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'artifact.txt, out/**', allowEmptyArchive: false
    }
  }
}
